<p>
共通の友達:
<% @common_friends.each do |name| %>
   @<%= name %>
<% end %>
</p>
<table border=1 bordercolor="#777777" cellspacing="0">
  <tr>
    <th>メッセージ</th>
    <th>着信時間</th>
  </tr>
<% @bottles.each do |bottle| %>
  <tr>
    <td><%= bottle.body %></td>
    <td><%= bottle.created_at %></td>
  </tr>
<% end %>
</table>

<%= form_for @bottle, :url => { :action => 'create_reply' } do |f| %>
  <div class="field">
    <%= f.text_area :body %>
    <%= f.hidden_field :from_user %>
    <%= f.hidden_field :to_user %>
    <%= f.hidden_field :prev_bottle %>
    <%= f.hidden_field :count %>
  </div>
  <div class="actions">
    <%= f.submit "返信", :disable_with => "返信中..." %>
  </div>
<% end %>

<%= link_to 'キャンセル', :action => 'index' %>
